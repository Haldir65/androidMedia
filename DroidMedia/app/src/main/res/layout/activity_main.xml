<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn1"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:text="VideoPlayer"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/btn2"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="Camera"
                android:textColor="@android:color/black"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn3"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:text="VideoCliping"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn4"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:text="VideoPlayerFilter"
                android:background="@android:color/white"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn5"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:text="DecodeFrame play on imageView or SurfaceView"
                android:textAllCaps="false" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn6"
            style="@style/CardStyleButton"
            android:background="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="DecodeFrameActivity"
                android:textColor="@android:color/black"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn7"
            style="@style/CardStyleButton"
            app:contentPadding="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="Encode"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn8"
            style="@style/CardStyleButton"
            app:contentPadding="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="OpenGL"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn9"
            style="@style/CardStyleButton"
            app:contentPadding="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="extract frame and save to file"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn10"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:text="MediaCodec录音并编码为aac文件"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/btn11"
            style="@style/CardStyleButton"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:contentPadding="4dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="gpuvideo"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btn12"
            style="@style/CardStyleButton"
            app:contentPadding="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="DecodeActivity"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>